# ============================================================================
# USDT Trading Platform Environment Configuration
# ============================================================================
# Copy this file to .env and configure according to your environment
# 
# SECURITY WARNING: 
# - Never commit .env file to version control
# - Use strong passwords and secrets in production
# - Regularly rotate secrets and API keys
# ============================================================================

# ============================================================================
# APPLICATION ENVIRONMENT
# ============================================================================
# Environment: development, testing, production
SPRING_PROFILES_ACTIVE=prod
NODE_ENV=production

# Application base URL (used for email links, etc.)
APP_BASE_URL=https://localhost:8889

# Debug and logging level
LOG_LEVEL=INFO
DEBUG_ENABLED=false

# ============================================================================
# DATABASE CONFIGURATION (MySQL 8.0)
# ============================================================================
# MySQL root password (use strong password in production)
MYSQL_ROOT_PASSWORD=UsdtTrading123!

# Application database user credentials
MYSQL_USER=root
MYSQL_PASS=UsdtTrading123!
MYSQL_DATABASE=usdt_trading_platform

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_CONNECTION_TIMEOUT=30
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=5

# Database backup settings
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE=0 2 * * *
DB_BACKUP_RETENTION_DAYS=30

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
# Redis password (leave empty for no password)
REDIS_PASSWORD=

REDIS_PASSWORD=

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DATABASE=0
REDIS_TIMEOUT=5000

# Redis session settings
REDIS_SESSION_TIMEOUT=3600
REDIS_MAX_CONNECTIONS=50

# ============================================================================
# JWT AUTHENTICATION CONFIGURATION
# ============================================================================
# JWT secret key (MUST be changed in production - use 256+ bit random string)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-256-bits-minimum

# JWT token expiration (in seconds)
JWT_EXPIRATION=86400
JWT_REFRESH_EXPIRATION=604800

# JWT issuer and audience
JWT_ISSUER=usdt-trading-platform
JWT_AUDIENCE=usdt-users

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
# SMTP server settings
MAIL_HOST=g-mate.org
MAIL_PORT=587
MAIL_USERNAME=JasonWang@g-mate.org
MAIL_PASSWORD=Jason~76114


# Email settings
MAIL_FROM_ADDRESS=JasonWang@g-mate.org
MAIL_FROM_NAME=USDT Trading Platform

# Email security
MAIL_USE_TLS=true
MAIL_USE_SSL=false

# Email rate limiting
MAIL_RATE_LIMIT=100
MAIL_RATE_WINDOW=3600

# ============================================================================
# FILE STORAGE CONFIGURATION
# ============================================================================
# File storage path (inside container)
FILE_STORAGE_PATH=/app/uploads

# File upload limits
FILE_MAX_SIZE=100MB
FILE_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx

# File storage type: local, s3, minio
FILE_STORAGE_TYPE=local

# S3/MinIO configuration (if using cloud storage)
S3_BUCKET_NAME=usdt-uploads
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_REGION=us-east-1
S3_ENDPOINT=https://s3.amazonaws.com

# ============================================================================
# BLOCKCHAIN CONFIGURATION
# ============================================================================
# TronGrid node URL (Infura, Alchemy, or your own node)

# Blockchain Configuration
TRON_API_URL=https://api.trongrid.io
TRON_API_KEY=7b33a842-daaf-4e17-b2b4-0b175096907f
TRON_PRIVATE_KEY=7cd80e83e0d35855affb7829dce76c53a18eec788530a7512b63008bd361bb84
USDT_CONTRACT=TR7NHqjeKQxGTCi8q8ZY

# Gas settings
GAS_LIMIT=21000
GAS_PRICE=20000000000

# Transaction confirmation blocks
CONFIRMATION_BLOCKS=12

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Security headers
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY_ENABLED=true

# Session configuration
SESSION_TIMEOUT=1800
SESSION_MAX_CONCURRENT=3

# Password policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# Account lockout policy
LOCKOUT_MAX_ATTEMPTS=5
LOCKOUT_DURATION=300

# ============================================================================
# SSL/TLS CONFIGURATION
# ============================================================================
# SSL/TLS settings
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# SSL certificate type: self-signed, letsencrypt, custom
SSL_CERT_TYPE=self-signed

# Let's Encrypt configuration (if using letsencrypt)
LETSENCRYPT_EMAIL=JasonWang@g-mate.org
LETSENCRYPT_DOMAIN=g-mate.org

# ============================================================================
# MONITORING AND HEALTH CHECKS
# ============================================================================
# Health check configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Metrics and monitoring
METRICS_ENABLED=true
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false

# Application monitoring
APM_ENABLED=false
APM_SERVICE_NAME=usdt-trading-platform

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log level: TRACE, DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Log output format: json, plain
LOG_FORMAT=json

# Log rotation
LOG_ROTATION_ENABLED=true
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# Audit logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=INFO

# ============================================================================
# NOTIFICATION CONFIGURATION
# ============================================================================
# Push notification settings
PUSH_NOTIFICATIONS_ENABLED=true
FCM_SERVER_KEY=your-fcm-server-key

# SMS configuration
SMS_ENABLED=false
SMS_PROVIDER=twilio
SMS_API_KEY=your-sms-api-key
SMS_FROM_NUMBER=+1234567890

# Notification rate limits
NOTIFICATION_RATE_LIMIT=10
NOTIFICATION_RATE_WINDOW=60

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================
# Trading features
TRADING_ENABLED=true
SPOT_TRADING_ENABLED=true
MARGIN_TRADING_ENABLED=false

# Trading limits
MIN_TRADE_AMOUNT=1.00
MAX_TRADE_AMOUNT=100000.00
DAILY_WITHDRAWAL_LIMIT=10000.00

# Price feed configuration
PRICE_FEED_PROVIDER=binance
PRICE_UPDATE_INTERVAL=5

# Risk management
RISK_MANAGEMENT_ENABLED=true
MAX_POSITION_SIZE=50000.00

# ============================================================================
# KYC/AML CONFIGURATION
# ============================================================================
# KYC verification
KYC_ENABLED=true
KYC_AUTO_APPROVAL_ENABLED=false
KYC_DOCUMENT_RETENTION_DAYS=2555

# AML monitoring
AML_MONITORING_ENABLED=true
AML_TRANSACTION_THRESHOLD=10000.00

# Identity verification providers
ID_VERIFICATION_PROVIDER=jumio
ID_VERIFICATION_API_KEY=your-id-verification-api-key

# ============================================================================
# BACKUP AND DISASTER RECOVERY
# ============================================================================
# Automated backup configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Backup storage
BACKUP_STORAGE_TYPE=local
BACKUP_S3_BUCKET=usdt-backups
BACKUP_ENCRYPTION_ENABLED=true

# ============================================================================
# THIRD-PARTY INTEGRATIONS
